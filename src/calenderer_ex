    <script>
        document.getElementById('bookingForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const bookDate = document.getElementById('book-date').value;
            const bookTime = document.getElementById('book-time').value;
            const leaveDate = document.getElementById('leave-date').value;
            const leaveTime = document.getElementById('leave-time').value;

            if (!bookDate || !bookTime || !leaveDate || !leaveTime) {
                alert('Please fill all the fields');
            } else {
                // Write your logic to handle form submission here
                alert('Your booking has been made');

                // Show BookPage
                document.querySelector('.box').classList.add("show");
                // Hide form container
                document.querySelector('.container').classList.add("hide");
            }
        });
    </script>
